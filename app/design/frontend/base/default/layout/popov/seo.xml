<?xml version="1.0"?>
<layout>
	<default>
		<remove name="catalog.compare.sidebar"/>
		<remove name="right.reports.product.compared"/>
	</default>

	<catalog_product_view>
		<reference name="content">
			<block type="popov_seo/content"  name="content.seo.bottom" template="popov/seo/content.phtml" />
		</reference>
	</catalog_product_view>

	<catalog_category_default>
		<reference name="content">
			<block type="popov_seo/content"  name="content.seo.bottom" template="popov/seo/content.phtml" />
		</reference>
	</catalog_category_default>

	<catalog_category_layered>
		<reference name="head">
			<action method="addItem"><type>skin_js</type><name>js/popov/seo.js</name><params><![CDATA[name="popov_seo"]]></params></action>
		</reference>
		<reference name="content">
			<block type="popov_seo/seoBlock" after="product_list" name="popov_seo.seo_block_top" template="popov/seo/block/top.phtml"/>
		</reference>
	</catalog_category_layered>
</layout>
